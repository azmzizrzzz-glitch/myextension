{
  "manifest_version": 3,
  "name": "Monitoring Alert",
  "version": "2.0",
  "description": "آلارم صوتی برای مانیتورینگ",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
